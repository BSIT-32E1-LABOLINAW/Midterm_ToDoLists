@model IEnumerable<Tuple<int, ToDo.Domain.ToDo>>

@{
    ViewBag.Title = "ToDo List";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Link to your custom CSS file -->
    <link rel="stylesheet" href="~/css/DashBoard.css" />
</head>
<body>
    <div class="container">
        <h2 class="mt-4 mb-3">To Do List</h2>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Task Name</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Option</th>
                        <th>
                            <a href="@Url.Action("Create")" class="btn btn-primary">Add Task</a>
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Item1</td>
                            <td>@Html.DisplayFor(modelItem => item.Item2.Task)</td>
                            <td>@Html.DisplayFor(modelItem => item.Item2.Date)</td>
                            <td class="checkbox-column">
                                <input type="checkbox" id="done-@item.Item2.Id" @(item.Item2.Done ? "checked" : "") />
                                <label for="done-@item.Item2.Id"></label>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.Item2.Id })" class="btn btn-sm btn-info">Edit</a>
                                <a href="@Url.Action("Delete", new { id = item.Item2.Id })" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                            <td></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</body>
</html>
